<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:id="@+id/prepare_layout">
    	<ImageView 
    	    android:background="@drawable/prepare_page_bg"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent" 
        	android:scaleType="fitStart"/>
    	<ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true"
        	android:src="@drawable/prepare_page_footer"
        	android:paddingBottom="10dp" />
     </RelativeLayout>
	 <LinearLayout android:id="@+id/login_guide_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:visibility="gone">
		<com.youa.mobile.login.widget.CustomGallery 
			android:id="@+id/login_guide"
			android:spacing="0dp"
			android:layout_gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
		</LinearLayout>
</RelativeLayout>