<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF">
	<RelativeLayout
	android:id="@+id/title"
	style="@style/title_total">
		<ImageButton 
			android:id="@+id/back"
			android:text="@string/input_back"
			android:layout_width="36dp"
			android:layout_height="32dp"
			android:clickable="true" 
			android:gravity="center" 
			android:background="@drawable/common_back_selector"
			android:layout_alignParentLeft="true" 
			android:shadowColor="#ff466116"
			android:shadowDx="-1"
			android:shadowDy="-1"
			android:shadowRadius="0.1"/>
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true"
			android:gravity="center_vertical">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:paddingTop="2dip"
				android:paddingBottom="2dip" 
				android:textSize="@dimen/size_20"
				android:textColor="#FFFFFF" 
				android:gravity="center" 
				android:singleLine="true"
				android:shadowColor="#ff466116"
				android:shadowDx="-1"
				android:shadowDy="-1"
				android:shadowRadius="0.1"
				android:text="@string/life_search_title"/>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout 
		android:id="@+id/top_search_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/input_search_bar_bg"
		android:layout_below="@+id/title">
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal"
			android:paddingTop="6dp"
			android:paddingBottom="6dp"
			android:paddingLeft="6dp"
			android:paddingRight="6dp">
			<EditText android:id="@+id/search_keyword"
				android:layout_width="fill_parent"
				android:layout_height="30dip" 
				android:background="@drawable/input_search_box_bg"
				android:drawableLeft="@drawable/input_search_icon"
				android:focusable="true" 
				android:focusableInTouchMode="true"
				android:layout_weight="1"
				android:paddingLeft="10dip"
				style="@style/input_searchbox_text"
				/>
			<Button 
				android:text="@string/life_search"
				android:id="@+id/search" 
				android:layout_weight="4"
				android:layout_width="fill_parent" 
				android:layout_height="30dip"
				android:layout_marginLeft="6dp"
				android:background="@drawable/life_search_button"
				android:layout_toRightOf="@+id/topic_keyword"/>
		</LinearLayout>
