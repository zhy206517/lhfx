<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_picture_title"
    style="@style/input_title"
    android:background="@drawable/view_picture_title"
    android:descendantFocusability="afterDescendants" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_picture_back"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dip"
        android:text="@string/input_back" />
        
    <TextView
            android:id="@+id/picture_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/picture_count"
            android:textColor="#FFF"
            android:textSize="@dimen/size_18" /> 

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

     	<ImageButton
     		android:id="@+id/view_picture_dowload"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:clickable="true"
     		android:scaleType="fitCenter"
     		android:background="@drawable/common_download_selector"/>
     		   		

        <ImageButton
            android:id="@+id/view_picture_del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_refuse_selector"
            android:background="@null"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>