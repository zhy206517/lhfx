<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFF"
  android:orientation="vertical">
	<RelativeLayout style="@style/title_total">
		<ImageButton 
		     android:id="@+id/title_left"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:gravity="center"
			 android:layout_marginTop="2dp"
			 android:background="@drawable/common_back_selector" />
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true"
			android:gravity="center_vertical">
			<TextView 
				android:id="@+id/title" 
				style="@style/title_middle"
				android:layout_width="wrap_content"
				android:textSize="@dimen/size_20"
				android:text="@string/information_select_friend"/>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout android:id="@+id/top_search_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/input_search_bar_bg"
		android:gravity="center">
		<EditText android:id="@+id/friendname_keyword"
			android:layout_width="fill_parent"
			android:layout_height="30dip" 
			android:background="@drawable/input_search_box_bg"
			android:focusable="true" 
			android:singleLine="true"
			android:paddingLeft="13dp"
			android:focusableInTouchMode="true"
			android:hint="@string/input_input_keyword"
			style="@style/input_searchbox_text"
			/>
	</LinearLayout>
	<RelativeLayout 
        android:layout_width="fill_parent"
		android:layout_height="fill_parent">
  	<ListView android:id="@+id/list"
  		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="#00000000"
		android:divider="@drawable/feed_line"
		android:dividerHeight="2dp"
		android:visibility="gone"
		android:fastScrollEnabled="true"
		android:fadingEdge="none"
		/>
	<ProgressBar 
		android:id="@+id/progressBar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		style="?android:attr/progressBarStyle" 
		android:layout_gravity="center"
		android:indeterminate="false" 
		android:indeterminateDrawable="@drawable/process"
		android:layout_centerInParent="true" 
		android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>
