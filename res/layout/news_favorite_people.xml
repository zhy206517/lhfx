<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:background="#FFFFFFFF"
	>
	<RelativeLayout
	android:id="@+id/title"
	style="@style/title_total">
		<ImageButton 
			android:id="@+id/back"
			android:text="@string/input_back"
			android:layout_width="36dp"
			android:layout_height="32dp"
			android:clickable="true" 
			android:gravity="center" 
			android:background="@drawable/common_back_selector"
			android:layout_alignParentLeft="true" 
			android:shadowColor="#ff466116"
			android:shadowDx="-1"
			android:shadowDy="-1"
			android:shadowRadius="0.1"/>
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true"
			android:gravity="center_vertical">
			<TextView 
				style="@style/input_title_text"
				android:text="@string/news_favorite_people"/>
		</LinearLayout>
	</RelativeLayout>
	<ListView 
		android:id="@+id/people_list" 
        style="@style/life_common_list"
		android:layout_below="@+id/title"
		android:fadingEdge="none"/>
	<ProgressBar 
		android:id="@+id/progressBar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		style="?android:attr/progressBarStyle" 
		android:layout_gravity="center"
		android:indeterminate="false" 
		android:indeterminateDrawable="@drawable/process"
		android:layout_centerInParent="true" />
</RelativeLayout>