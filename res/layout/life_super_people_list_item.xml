<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/feed_item_bg"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >
    <RelativeLayout
        android:id="@+id/friend_addfriend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/manager_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/tianjiahaoyou" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/manager_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/feed_friend_manager_addfriend"
            android:textColor="#333333"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/more_right_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/super_people_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/head_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/head_image_mask"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignLeft="@id/head_image"
            android:layout_alignTop="@id/head_image"
            android:scaleType="fitCenter"
            android:src="@drawable/header_mask" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/head_image"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/signature"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="15sp" />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/pay_attention_to"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/bt_off_switch_bg_seletor"
            android:focusable="false"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>