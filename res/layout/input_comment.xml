<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:background="@android:color/white">
	<include layout="@layout/input_title"/>
	<com.youa.mobile.input.BitmapCanInsertEditText
		android:id="@+id/edit"
		style="@style/publish_edit"
		android:layout_above="@+id/tool_bar"
		/>
	<LinearLayout 
		android:id="@+id/tool_bar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_alignParentBottom="true"
		android:orientation="vertical">
		<RelativeLayout
			android:layout_width="fill_parent" 
			android:layout_height="44dp">
			<Button
				android:id="@+id/left_words"
				android:layout_width="wrap_content"
		       	android:layout_height="30dp"
				style="@style/input_left_words"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:text="140" />
		</RelativeLayout>
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="42dp" 
			android:id="@+id/tool_bar"
			android:background="@drawable/input_comment_toolbar_bg">
			<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="2">
				<ImageView
					android:id="@+id/insert_topic"
					style="@style/publish_tool_button"
					android:src="@drawable/input_topic_sec"
					android:layout_centerInParent="true"
					/>
				<TextView 
					android:id="@+id/line4"
					style="@style/publish_tool_line"/>
			</RelativeLayout>
			<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="2">
				<ImageView
					android:id="@+id/insert_people"
					style="@style/publish_tool_button"
					android:src="@drawable/input_people_sec"
					android:layout_centerInParent="true"
					/>
				<TextView 
					android:id="@+id/line2"
					style="@style/publish_tool_line"/>
			</RelativeLayout>
			<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="2">
				<ImageView
					android:id="@+id/insert_face"
					style="@style/publish_tool_button"
					android:src="@drawable/input_face_sec"
					android:layout_centerInParent="true"/>
					<TextView 
					android:id="@+id/line5"
					style="@style/publish_tool_line"/>
			</RelativeLayout>
			<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:id="@+id/comment_layout"
				android:layout_weight="1">
				<CheckBox
					android:id="@+id/checkbox"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:button="@drawable/input_checkbox_sec"
					android:clickable="true"
					android:paddingLeft="5dp"/>
				<TextView
					android:id="@+id/checkbox_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:textColor="#979797"
					android:textSize="15sp"
					android:paddingRight="5dp"
					android:layout_marginLeft="-5dp"
					android:layout_toRightOf="@+id/checkbox"/>
				<TextView
					android:id="@+id/comment_to"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:ems="5"
					android:singleLine="true"
					android:ellipsize="end"
					android:textColor="#979797"
					android:textSize="15sp"
					android:layout_toRightOf="@+id/checkbox_text"/>
			</RelativeLayout>
		</LinearLayout>
		<GridView 
			android:id="@+id/face_view"
			style="@style/input_face_view"/>
	</LinearLayout>
</RelativeLayout>